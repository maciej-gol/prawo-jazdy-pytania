FROM ubuntu:22.04

RUN apt-get update && apt-get install -y --no-install-recommends ffmpeg && rm -rf /var/lib/apt/lists/*

COPY scripts/docker-convert.sh /convert.sh
RUN chmod +x /convert.sh

# Input WMV files must be mounted at /input (read-only)
# Output WebM files will be written to /output
ENTRYPOINT ["/convert.sh"]
